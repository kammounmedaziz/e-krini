# Server Configuration
PORT=3006
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/promotion-coupon_db
MONGODB_TEST_URI=mongodb://localhost:27017/promotion-coupon_test_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
ACCESS_TOKEN_SECRET=your-super-secret-jwt-key-here

# Service URLs
RESERVATION_SERVICE_URL=http://localhost:3004
AUTH_SERVICE_URL=http://localhost:3001
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-here

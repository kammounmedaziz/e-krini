# Environment Variables for Reservation Service

# Server Configuration
NODE_ENV=development
PORT=3003

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/car-rental-reservations

# Redis Configuration (for distributed locks)
REDIS_URL=redis://localhost:6379
LOCK_TTL=30000

# Message Broker Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=car-rental-events

# Calendar Integration (Optional)
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret

# PDF Generation
PDF_TEMPLATE_DIR=./templates

# Logging
LOG_LEVEL=info

# JWT Configuration
ACCESS_TOKEN_SECRET=your-jwt-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# Service URLs (for inter-service communication)
FLEET_SERVICE_URL=http://localhost:3002
PROMOTION_SERVICE_URL=http://localhost:3008
AUTH_SERVICE_URL=http://localhost:3001
MAINTENANCE_SERVICE_URL=http://localhost:3007
ASSURANCE_SERVICE_URL=http://localhost:3005
FEEDBACK_SERVICE_URL=http://localhost:3006

# Environment Configuration for Insurance & Claims Service

# Server Configuration
PORT=3008
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/insurance_claims_db
MONGODB_TEST_URI=mongodb://localhost:27017/insurance_claims_test_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs
USER_SERVICE_URL=http://localhost:3001
VEHICLE_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
BOOKING_SERVICE_URL=http://localhost:3005
ANALYTICS_SERVICE_URL=http://localhost:3006
PROMOTION_COUPON_SERVICE_URL=http://localhost:3007

# File Upload Configuration
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/insurance-claims.log

# Insurance Settings
INSURANCE_RENEWAL_REMINDER_DAYS=30
CLAIM_PROCESSING_TIME_DAYS=14
MAX_CLAIM_AMOUNT=50000
INSURANCE_PROVIDERS_API_URL=https://api.insurance-providers.com

# External API Keys
# INSURANCE_API_KEY=your-insurance-api-key
# CLAIMS_PROCESSING_API_KEY=your-claims-api-key
# VEHICLE_VALUATION_API_KEY=your-vehicle-valuation-api-key
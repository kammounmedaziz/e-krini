# Environment Configuration for Maintenance & Repair Service

# Server Configuration
PORT=3007
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/maintenance_repair_db
MONGODB_TEST_URI=mongodb://localhost:27017/maintenance_repair_test_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs
USER_SERVICE_URL=http://localhost:3001
VEHICLE_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
BOOKING_SERVICE_URL=http://localhost:3005
ANALYTICS_SERVICE_URL=http://localhost:3006

# File Upload Configuration
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/maintenance-repair.log

# Maintenance Settings
MAINTENANCE_REMINDER_DAYS=30
SERVICE_INTERVAL_KM=10000
EMERGENCY_CONTACT=+1234567890

# External API Keys (if needed)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# WEATHER_API_KEY=your-weather-api-key
# Environment Variables for Agency & Fleet Service

# Server Configuration
NODE_ENV=development
PORT=3002

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/car-rental-fleet

# Message Broker Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=car-rental-events

# File Upload (Vehicle Images)
UPLOAD_DIR=./uploads/vehicles
MAX_FILE_SIZE=10485760
AWS_S3_BUCKET=car-rental-vehicles
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# JWT Configuration
ACCESS_TOKEN_SECRET=your-jwt-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# Service URLs
RESERVATION_SERVICE_URL=http://localhost:3004
MAINTENANCE_SERVICE_URL=http://localhost:3007
AUTH_SERVICE_URL=http://localhost:3001

# Logging
LOG_LEVEL=info
